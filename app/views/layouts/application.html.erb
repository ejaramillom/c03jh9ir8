<!DOCTYPE html>
<html>
<head>
  <title>Actors1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>
<ul>
  <% @actors.each do |user| %>
    <li><img src = "<%= user.image_url%>" ></li>
    <li> <%= user.name %> </li>
    <li> <%= user.bio %> </li>
    <li> <%= user.birth_date %> </li>
    <li> <%= user.birth_place %> </li>
    <li> </li>
    <% if user.death_place then %>
    <li> <%= user.death_date %> </li>
    <li> <%= user.death_place %> </li>
    <li></li>
    <% end %>
  <% end %>
</ul>


</body>
</html>
